{
  "manifest_version": 3,
  "name": "Illusion Breaker",
  "version": "1.0.0",
  "description": "Analyze web content for misinformation patterns with AI-powered fact-checking",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://illusion-breaker.vercel.app/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
